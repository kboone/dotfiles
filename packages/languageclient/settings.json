{
    "pyls": {
        "configurationSources": ["flake8"],
        "plugins": {
            "jedi_completion": {
                "enabled": true
            },
            "jedi_hover": {
                "enabled": true
            },
            "jedi_references": {
                "enabled": true
            },
            "jedi_signature_help": {
                "enabled": true
            },
            "jedi_symbols": {
                "enabled": true,
                "all_scopes": true
            },
            "mccabe": {
                "enabled": false,
                "threshold": 15
            },
            "preload": {
                "enabled": false
            },
            "pycodestyle": {
                "enabled": false
            },
            "pydocstyle": {
                "enabled": false,
                "match": "(?!test_).*\\.py",
                "matchDir": "[^\\.].*"
            },
            "pyflakes": {
                "enabled": true
            },
            "pylint": {
                "enabled": false
            },
            "rope_completion": {
                "enabled": false
            },
            "yapf": {
                "enabled": false
            }
        }
    }
}
